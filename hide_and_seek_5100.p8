--draw

function draw_menu()
	printc("hide and seek 5100",30,10,9)
	printc("< "..numplayers.." players >",76,7)
end

function draw_game()
	cls()
	map()
	for _player in all(players) do
		draw_player(_player)
	end
end

function draw_player(_player)
	palt(0,false)
	palt(11,true)
	pal(15,_player.c)
	spr(1,_player.x,_player.y,1,1,_player.flipped)
	pal()
end
