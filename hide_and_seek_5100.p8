function _init()
	debug={}
	refresh=stat(8)
	cooldown=3
	fading=0
	change_state(update_menu,draw_menu)
	init_players()
end

function _update()
	ustate()
end

function _draw()
	cls()
	dstate()
	if debug then draw_debug(64,0) end
end

function init_players()
	numplayers=1
	players={}
	add(players,create_player(1,1,12))
	add(players,create_player(119,1,14))
	add(players,create_player(1,119,8))
	add(players,create_player(119,119,9))
end

function create_player(_x,_y,_c)
	return {
		x=_x,
		y=_y,
		dirx=0,
		diry=0,
		c=_c,
		flipped=false,
		speed=1,
		boosting=false,
		boosttimer=0,
		boostcool=0,
		alive=true,
	}
end
